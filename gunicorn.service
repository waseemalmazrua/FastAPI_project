[Unit]
Description=demo fastapi application
After=network.target

[Service]
User=wasee
Group=wasee
WorkingDirectory=/home/wasee/app/src/
Environment="PATH=/home/wasee/app/venv/bin"
EnvironmentFile=/home/wasee/.env
ExecStart=/home/wasee/app/venv/bin/gunicorn -w 4 -k uvicorn.workers.UvicornWorker app.main:app --bind 0.0.0.0:8000

[Install]
WantedBy=multi-user.target